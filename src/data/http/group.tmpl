	<!--<h1>%%grouptitle%%</h1>
	<a href='/?nocache=%%date%%'>&laquo; Main</a> | %%include:data/http/inc-ctrl-toggles.tmpl%%
	-->
	<table >
	%%loop:list%%
		<tr>
			<td>
				<a name='slide%%slide%%'>
					<a href='#slide%%slide%%' onclick='return false'>
						<img 
							id='img%%slide%%' 
							onclick='setSlide("/group/%%groupidx%%?slide=%%slide%%",this)' 
							src='/group/%%groupidx%%/icon?slide=%%slide%%' 
